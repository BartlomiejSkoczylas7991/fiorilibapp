<mvc:View 
    controllerName="fiorilibappname.controller.Detail"
    xmlns:internal="sap.landvisz.internal"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    height="100%">
    <ObjectPageLayout id="ObjectPageLayout">
     <headerTitle>
            <ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle"
            >
                <expandedHeading>
                    <m:Button
                        id="buttonBack"
                        text="Back"
                        type="Back"
                        press=".onNavBack"
                    />
                </expandedHeading>

                <snappedHeading>
                    <m:HBox id="_IDGenHBox1">
                        <m:VBox id="_IDGenVBox1">
                            <m:Avatar
                                id="_IDGenAvatar1"
                                class="sapUiSmallMarginEnd"
                                displayShape="Square"
                                initials="App"
                            />
                        </m:VBox>

                        <m:VBox id="_IDGenVBox2">
                            <m:Title
                                id="_IDGenTitle1"
                                text="{i18n>headerTitle}"
                                wrapping="true"
                            />
                            <m:Label
                                id="_IDGenLabel1"
                                text="{i18n>headerTitleDescription}"
                            />
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>

                <actions>
                    <m:Button
                        id="buttonEdit"
                        text="Edit"
                        type="Emphasized"
                        press=".onEditButtonPress"
                        icon="sap-icon://edit"
                    />
                    <m:Button
                        id="buttonSave"
                        text="Save"
                        icon="sap-icon://save"
                        visible="false"
                        press=".onSaveButtonPress"
                    />
                    <m:Button
                        id="buttonCopy"
                        text="Copy"
                        press=".onCopyButtonPress"
                        icon="sap-icon://copy"
                    />
                    <m:OverflowToolbarButton
                        id="overflowToolbarButton"
                        type="Transparent"
                        text="Share"
                        tooltip="action"
                        icon="sap-icon://action"
                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox
                id="headerContentFlexBox"
                wrap="Wrap"
                fitContainer="true"
            >
                <m:VBox
                    id="headerContentVBox1"
                    class="sapUiSmallMarginBottom sapUiLargeMarginEnd"
                >
                    <m:Title
                        id="headerContentVBoxTitle5"
                        class="sapUiTinyMarginBottom"
                        text="{i18n>headerTitleApp}"
                    />
                    <m:Label
                        id="headerContentLabel1"
                        text="{odata>TechnicalName}"
                        width="1000px"
                    />
                </m:VBox>
                <m:VBox
                    id="headerContentVBox2"
                    class="sapUiSmallMarginBottom sapUiLargeMarginEnd"
                >
                    <m:Title
                        id="headerContentVBoxTitle2"
                        class="sapUiTinyMarginBottom"
                        text="{i18n>headerRating}"
                    />
                </m:VBox>

                <m:VBox
                    id="headerContentVBox3"
                    class="sapUiSmallMarginBottom sapUiLargeMarginEnd"
                >
                </m:VBox>

                <m:VBox
                    id="headerContentVBox4"
                    class="sapUiSmallMarginBottom sapUiLargeMarginEnd"
                >
                    <m:Title
                        id="headerContentVBoxTitle4"
                        class="sapUiTinyMarginBottom"
                        text="{i18n>headerDescription}"
                    />
                    <m:Label
                        id="headerContentLabel5"
                        text="{odata>Description}"
                    />
                </m:VBox>

                <m:VBox
                    id="headerContentVBox5"
                    class="sapUiSmallMarginBottom sapUiLargeMarginEnd"
                >
                    <m:Title
                        id="headerContentVBoxTitle6"
                        class="sapUiTinyMarginBottom"
                        text="{i18n>BookStatus}"
                    />
                    <m:Label
                        id="headerContentLabel6"
                        text="{odata>BookStatus}"
                    />
                </m:VBox>

                <m:VBox
                    id="headerContentVBox6"
                    class="sapUiSmallMarginBottom sapUiLargeMarginEnd"
                >
                    <m:Title
                        id="headerContentVBoxTitle7"
                        class="sapUiTinyMarginBottom"
                        text="{i18n>NumberOfCopies}"
                    />
                    <m:Label
                        id="headerContentLabel7"
                        text="{odata>NumberOfCopies}"
                    />
                </m:VBox>
            </m:FlexBox>
        </headerContent>
        <sections>
        </sections>
    </ObjectPageLayout>
</mvc:View>