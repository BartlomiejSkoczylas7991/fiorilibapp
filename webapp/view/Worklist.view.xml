<mvc:View
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:plugins="sap.m.plugins"
    xmlns:semantic="sap.f.semantic"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    displayBlock="true"
    controllerName="fiorilibappname.controller.Worklist">

    <semantic:SemanticPage
        id="page"
        toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title text="{i18n>worklist}" />
        </semantic:titleHeading>
        
        <semantic:content>
            <VBox fitContainer="true">
                <smartFilterBar:SmartFilterBar id="smartFilterBar"
                                               entitySet="ZC_BSK_LA_SOLUTION"
                                               persistencyKey="SmartFilter_Explored"
                                               beforeVariantFetch="onBeforeVariantFetch"
                                               afterVariantLoad="onAfterVariantLoad">
                    <smartFilterBar:controlConfiguration>
                        <smartFilterBar:ControlConfiguration
                            key="TypeDescription"
                            index="1"
                            label="Type Description"
                            width="300px"
                            visibleInAdvancedArea="true">
                            <smartFilterBar:customControl>
                                <MultiComboBox
                                    id="multiComboBox"
                                    selectionChange="customFieldChange">
                                    <core:Item key="1" text="APP"/>
                                    <core:Item key="2" text="API"/>
                                    <core:Item key="3" text="THREE"/>
                                </MultiComboBox>
                            </smartFilterBar:customControl>
                        </smartFilterBar:ControlConfiguration>
                        <smartFilterBar:ControlConfiguration
                            key="StatusDescription"
                            label="Custom Select Field"
                            visibleInAdvancedArea="true">
                            <smartFilterBar:customControl>
                                <Select
                                    id="customSelect"
                                    width="300px">
                                    <core:Item key="1" text="1"/>
                                    <core:Item key="2" text="2"/>
                                    <core:Item key="3" text="3"/>
                                </Select>
                            </smartFilterBar:customControl>
                        </smartFilterBar:ControlConfiguration>
                        <smartFilterBar:ControlConfiguration
                            key="TechnicalName"
                            label="Custom Switch"
                            visibleInAdvancedArea="true">
                            <smartFilterBar:customControl>
                                <Switch
                                    id="customSwitch" />
                            </smartFilterBar:customControl>
                        </smartFilterBar:ControlConfiguration>
                    </smartFilterBar:controlConfiguration>
                </smartFilterBar:SmartFilterBar>
                <smartTable:SmartTable
                    id="idSmartSolutionTable"
                    smartFilterId="smartFilterBar"
                    entitySet="ZC_BSK_LA_SOLUTION"
                    tableType="ResponsiveTable"
                    header="{i18n>worklistTitle}"
                    initiallyVisibleFields="SolId,TechnicalName,Subtitle,StatusDescription,ActionDescription"
                    useVariantManagement="true"
                    useTablePersonalisation="true"
                    enableAutoBinding="true"
                    showRowCount="true"
                    persistencyKey="SmartTableRefApp_Explored"
                    class="sapUiResponsiveContentPadding">
                    <smartTable:customToolbar>
                        <OverflowToolbar>
                            <ToolbarSpacer />
                            <Button text="Create" press="onAddButtonPress" />
                        </OverflowToolbar>
                    </smartTable:customToolbar>
                    <Table id="idSolutionTable" mode="SingleSelectMaster" selectionChange="onPress" />
                </smartTable:SmartTable>
            </VBox>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
