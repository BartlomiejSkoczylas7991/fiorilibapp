<mvc:View 
    controllerName="fiorilibappname.controller.Object"
    xmlns:internal="sap.landvisz.internal"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:descrip="fiorilibappname.SharedBlocks.businessDescription"
    xmlns:tech_inf="fiorilibappname.SharedBlocks.technicalInformation"
    xmlns:imp_notes="fiorilibappname.SharedBlocks.importantNotes"
    xmlns:attachm="fiorilibappname.SharedBlocks.attachments"
    xmlns:relatedApps="fiorilibappname.SharedBlocks.relatedApps"
    height="100%">
    <m:Page showNavButton="true"
		    navButtonPress=".onNavBack">
    <ObjectPageLayout 
        id="ObjectPageLayout" 
        upperCaseAnchorBar="false"
        sectionChange="onSectionChange"
        enableLazyLoading="true"
		beforeNavigate="onBeforeNavigate"
		useIconTabBar="true"
		showTitleInHeaderContent="true">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{singleSolutionModel>/TechnicalName}" wrapping="true" />
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox fitContainer="true" alignItems="Center">
						<m:Title text="{singleSolutionModel>/TechnicalName}" />
						<m:Label text="{singleSolutionModel>/SubTitle}" />
					</m:FlexBox>
                </snappedHeading>

                <expandedContent>
					<m:Text text="{singleSolutionModel>/TypeDescription}"/>
				</expandedContent>

                <actions>
                    <m:Button text="Edit" type="Emphasized" press="onEditPress" visible="{= !${viewGlobal>/isEditMode}? true : false}" />
                    <m:Button text="Save" press="onSavePress" visible="{= ${viewGlobal>/isEditMode}? true : false}" />
                    <m:Button type="Transparent" text="Copy"/>
                    <m:Button text="Cancel" press="onCancelPress" visible="{= ${viewGlobal>/isEditMode}? true : false}" />
                    <m:Button type="Transparent" text="Delete" press="onDeletePress" visible="{= !${viewGlobal>/isEditMode}? true : false}" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true" >
                <m:Avatar class="sapUiSmallMarginEnd" displaySize="L" />

                <l:VerticalLayout class="sapUiSmallMarginBeginEnd" visible="{= !${viewGlobal>/isEditMode}? true : false}">
			    	<m:Label text="Component"/>
                    <m:Text text="{singleSolutionModel>/AppComponentText}"/>
			    </l:VerticalLayout>
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd" visible="{= !${viewGlobal>/isEditMode}? true : false}">
			    	<m:Label text="Type"/>
                    <m:Text text="{singleSolutionModel>/TypeDescription}"/>
			    </l:VerticalLayout>

                <l:VerticalLayout class="sapUiSmallMarginBeginEnd" visible="{= !${viewGlobal>/isEditMode}? true : false}">
			    	<m:Label text="Device"/>
                    <m:Text text="Desktop, Tablet"/>
			    </l:VerticalLayout>
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd" visible="{= !${viewGlobal>/isEditMode}? true : false}">
			    	<m:Label text="Status"/>
                    <m:Text text="singleSolutionModel>/StatusDescription"/>
			    </l:VerticalLayout>
            </m:FlexBox>
            <m:FlexBox wrap="Wrap" fitContainer="true" justifyContent="SpaceBetween" alignItems="End">
            <m:FlexBox wrap="Wrap" fitContainer="true">
                <!-- Lewa strona: inny content -->
                <m:Avatar class="sapUiSmallMarginEnd" displaySize="L" />
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Label text="Component"/>
                    <m:Text text="{singleSolutionModel>/AppComponentText}"/>
                </l:VerticalLayout>
            </m:FlexBox>
            <m:FlexBox wrap="Wrap" fitContainer="true">
                <!-- Prawa strona: Status i Typ -->
                <m:Badge text="{singleSolutionModel>/Status}" colorScheme="8" class="customMargin"/>
                <m:Badge text="{singleSolutionModel>/Type}" colorScheme="1" class="customMargin"/>
                <!-- Dodatkowe przyciski i informacje -->
                <m:Button text="Non Escrowed" type="Emphasized" class="customMargin"/>
                <m:Button text="Delinquent" type="Reject" class="customMargin"/>
            </m:FlexBox>
            </m:FlexBox>
        </headerContent>        
        <sections>
            <ObjectPageSection title="Business Description">
                <subSections>
                    <ObjectPageSubSection title="Description">
                        <blocks>
                            <descrip:Descrip id="descrblock" description="{singleSolutionModel>/Description}" visible="{= !${viewGlobal>/isEditMode}? true : false}"/>
                            <f:SimpleForm id = ".idSimpleFormHeader" visible="{= ${viewGlobal>/isEditMode}? true : false}" layout="ResponsiveGridLayout" editable="true">
                                <f:content>
                                    <m:Label text="Technical Name" />
                                    <m:Input id="idInputTechnicalName" value="{viewDetail>/TechnicalName}" />
                                    <m:Label text="URL" />
                                    <m:Input id="idInputUrl" value="{viewDetail>/Url}" />
                                    <m:Label text="Description" />
                                    <m:TextArea id="idInputDescription" value="{viewDetail>/Description}" rows="7" />
                                    <m:Label text="URL"/>
                                    <m:Input value="{viewDetail>/URL}"/>
                                 </f:content>
                            </f:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="Image">
                        <blocks>
                            <descrip:Image/>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection title="Important Notes">
                <subSections>
                    <ObjectPageSubSection title="ImportantNotes">
                        <blocks>
                            <imp_notes:Comments/>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            
            <ObjectPageSection title="Technical Information">
                 <subSections>
                     <ObjectPageSubSection title="Overview">
                        <blocks>
                            <m:VBox class="sapUiSmallMargin">
                                <m:Link text="SAP Fiori Overview" href="https://help.sap.com/docs/SAP_S4HANA_ON-PREMISE/22bbe89ef68b4d0e98d05f0d56a7f6c8/4c1048feb4ea4f7d81ccbc47233a0d68.html?locale=en-US" target="_blank"/>
                            </m:VBox>
                        </blocks>
                    </ObjectPageSubSection>
                     <ObjectPageSubSection title="Services">
                        <blocks>
                            <tech_inf:Service/>
                        </blocks>
                     </ObjectPageSubSection>
                     <ObjectPageSubSection title="Target Map">
                        <blocks>
                            <tech_inf:Tar_Map/>
                        </blocks>
                     </ObjectPageSubSection>
                     <ObjectPageSubSection title="Role">
                        <blocks>
                            <tech_inf:Role/>
                        </blocks>
                     </ObjectPageSubSection>
                     <ObjectPageSubSection title="Groups">
                        <blocks>
                            <tech_inf:Group/>
                        </blocks>
                     </ObjectPageSubSection>
                     <ObjectPageSubSection title="Catalogs">
                        <blocks>
                            <tech_inf:Catalog/>
                        </blocks>
                     </ObjectPageSubSection>
                     <ObjectPageSubSection title="Tiles">
                        <blocks>
                            <tech_inf:Tile/>
                        </blocks>
                     </ObjectPageSubSection>
                     <ObjectPageSubSection title="Components">
                        <blocks>
                            <tech_inf:Component/>
                        </blocks>
                     </ObjectPageSubSection>
                 </subSections>
             </ObjectPageSection>
             <ObjectPageSection title="Attachments">
                <subSections>
                    <ObjectPageSubSection title="Attachments">
                        <blocks>
                            <attachm:Attachment/>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Related Apps">
                <subSections>
                    <ObjectPageSubSection title="Related Apps">
                        <blocks>
                            <relatedApps:relatedApps/>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
    </m:Page>
</mvc:View>


