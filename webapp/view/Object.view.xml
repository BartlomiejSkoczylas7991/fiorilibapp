<mvc:View 
    controllerName="fiorilibappname.controller.Object"
    xmlns:internal="sap.landvisz.internal"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:description="fiorilibappname.SharedBlocks.businessDescription"
    xmlns:tech_inf="fiorilibappname.SharedBlocks.technicalInformation"
    xmlns:imp_notes="fiorilibappname.SharedBlocks.ImportantNotes"
    height="100%">
    <m:Page showNavButton="true"
		    navButtonPress=".onNavBack">
    <ObjectPageLayout 
        id="ObjectPageLayout" 
        upperCaseAnchorBar="false"
        sectionChange="onSectionChange"
        enableLazyLoading="true"
		beforeNavigate="onBeforeNavigate"
		useIconTabBar="true"
		showTitleInHeaderContent="true">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{viewModel>/TechnicalName}" wrapping="true" />
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox fitContainer="true" alignItems="Center">
						<m:Title text="{viewModel>/TechnicalName}" />
						<m:Label text="{viewModel>/SubTitle}" />
					</m:FlexBox>
                </snappedHeading>

                <expandedContent>
					<m:Text text="{viewModel>/TypeDescription}"/>
				</expandedContent>

                <actions>
                    <m:Button text="Edit" type="Emphasized" press="onEditPress" visible="{= !${viewModel>/isEditMode}? true : false}" />
                    <m:Button text="Save" press="onSavePress" visible="{= ${viewModel>/isEditMode}? true : false}" />
                    <m:Button type="Transparent" text="Copy"/>
                    <m:Button text="Cancel" press="onCancelPress" visible="{= ${viewModel>/isEditMode}? true : false}" />
                    <m:Button type="Transparent" text="Delete" press="onDeletePress" visible="{= !${viewModel>/isEditMode}? true : false}" />
                    <m:Button id="buttonBack" text="Back" type="Back" press=".onNavBack" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true" >
                <m:Avatar class="sapUiSmallMarginEnd" displaySize="L" />

                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
			    	<m:Label text="Component"/>
                    <m:Text text="{viewModel>/AppComponentText}"/>
			    </l:VerticalLayout>
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
			    	<m:Label text="Type"/>
                    <m:Text text="{viewModel>/TypeDescription}"/>
			    </l:VerticalLayout>

                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
			    	<m:Label text="Device"/>
                    <m:Text text="Desktop, Tablet"/>
			    </l:VerticalLayout>
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
			    	<m:Label text="Device"/>
                    <m:Text text="Desktop, Tablet"/>
			    </l:VerticalLayout>


            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection title="Business Description">
                <subSections>
                    <ObjectPageSubSection title="Description">
                        <blocks>
                            <description:Description id="descrblock" description="{viewModel>/Description}" visible="{= !${viewModel>/isEditMode}? true : false}"/>
                            <f:SimpleForm id="descriptionForm" editable="{= ${viewModel>/isEditMode}? true : false}" visible="{= ${viewModel>/isEditMode}? true : false}">
                                <f:content>
                                    <m:Label text="Description"/>
                                    <m:TextArea value="{viewDetail>/Description}" rows="10"/>
                                    <m:Label text="URL"/>
                                    <m:Input value="{viewDetail>/URL}"/>
                                </f:content>
                            </f:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="Image">
                        <blocks>
                            <m:VBox class="sapUiSmallMargin" fitContainer="true">
                                <description:Image/>
                            </m:VBox>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection title="Important Notes">
                <subSections>
                    <ObjectPageSubSection title="ImportantNotes">
                        <blocks>
                            <imp_notes:Comments/>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            
            <ObjectPageSection title="Technical Information">
                 <subSections>
                     <ObjectPageSubSection title="Overview">
                        <blocks>
                            <m:VBox class="sapUiSmallMargin">
                                <m:Link text="SAP Fiori Overview" href="https://help.sap.com/docs/SAP_S4HANA_ON-PREMISE/22bbe89ef68b4d0e98d05f0d56a7f6c8/4c1048feb4ea4f7d81ccbc47233a0d68.html?locale=en-US" target="_blank"/>
                            </m:VBox>
                        </blocks>
                    </ObjectPageSubSection>
                     <ObjectPageSubSection title="Services">
                        <blocks>
                            <tech_inf:Service/>
                        </blocks>
                     </ObjectPageSubSection>
                     <ObjectPageSubSection title="Target Map">
                        <blocks>
                            <tech_inf:Tar_Map/>
                        </blocks>
                     </ObjectPageSubSection>
                 </subSections>
             </ObjectPageSection>
             <ObjectPageSection title="Attachments">
                <subSections>
                    <ObjectPageSubSection title="Attachments">
                        <blocks>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Related Apps">
                <subSections>
                    <ObjectPageSubSection title="Related Apps">
                        <blocks>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
    </m:Page>
</mvc:View>


