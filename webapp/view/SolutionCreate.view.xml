<mvc:View controllerName="fiorilibappname.controller.SolutionCreate"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:smartform="sap.ui.comp.smartform"
    height="100%">

    <ObjectPageLayout id="CreatePageLayout" upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageHeader objectTitle="Create Solution">
                <actions>
                    <m:Button text="Save" type="Emphasized" icon="sap-icon://save" press="onSavePress"/>
                    <m:Button text="Cancel" icon="sap-icon://cancel" press="onCancelPress"/>
                </actions>
            </ObjectPageHeader>
        </headerTitle>
        
        <headerContent>
            <smartform:SmartForm editable="true">
                <smartform:Group>
                    <smartform:GroupElement label="Technical Name">
                        <m:Input value="{/newSolution/TechnicalName}"/>
                    </smartform:GroupElement>
                    <smartform:GroupElement label="URL">
                        <m:Input value="{/newSolution/Url}"/>
                    </smartform:GroupElement>
                    <smartform:GroupElement label="API/APP:">
                        <m:Input value="{/newSolution/SolType}"/>
                    </smartform:GroupElement>
                    <smartform:GroupElement label="Status">
                        <m:Input value="{/newSolution/Status}"/>
                    </smartform:GroupElement>
                    <smartform:GroupElement label="Action">
                        <m:Input value="{/newSolution/SolutionAction}"/>
                    </smartform:GroupElement>
                    <smartform:GroupElement label="Description:">
                        <m:Input value="{/newSolution/Description}"/>
                    </smartform:GroupElement>
                    <smartform:GroupElement label="Application Component">
                        <m:Input value="{/newSolution/AppComponentText}"/>
                    </smartform:GroupElement>
                </smartform:Group>
            </smartform:SmartForm>
        </headerContent>
        
        <sections>
            <ObjectPageSection title="Target Mappings">
                <subSections>
                    <ObjectPageSubSection>
                        <m:VBox class="sapUiSmallMargin">
                            <m:HBox>
                                <m:Input id="targetMappingURL" placeholder="URL" value="{/newTargetMapping/Url}" width="200px"/>
                                <m:Input id="targetMappingType" placeholder="Type" value="{/newTargetMapping/Type}" width="200px"/>
                                <m:Input id="targetMappingParamValue" placeholder="Param Value" value="{/newTargetMapping/ParamValue}" width="200px"/>
                                <m:Button text="Add" press="onAddTargetMapping"/>
                            </m:HBox>
                            <m:Table items="{/targetMappings}" mode="Delete" delete="onDeleteTargetMapping">
                                <m:columns>
                                    <m:Column width="12em">
                                        <m:Label text="URL"/>
                                    </m:Column>
                                    <m:Column width="6em">
                                        <m:Label text="Type"/>
                                    </m:Column>
                                    <m:Column width="6em">
                                        <m:Label text="Param Value"/>
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text text="{Url}"/>
                                            <m:Text text="{Type}"/>
                                            <m:Text text="{ParamValue}"/>
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </m:VBox>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
