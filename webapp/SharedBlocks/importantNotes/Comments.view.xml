<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Table items="{singleSolutionModel>/to_Comments}">
        <headerToolbar>
            <Toolbar>
                <Title text="Important Notes"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Note Number"/>
            </Column>
            <Column>
                <Text text="Title"/>
            </Column>
            <Column>
                <Text text="System"/>
            </Column>
            <Column>
                <Text text="Created"/>
            </Column>
            <Column>
                <Text text="CreatedBy"/>
            </Column>
            <Column>
                <Text text="Text"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{singleSolutionModel>NoteNumber}"/>
                    <Text text="{singleSolutionModel>Title}"/>
                    <Text text="{singleSolutionModel>System}"/>
                    <Text text="{singleSolutionModel>Created}"/>
                    <Text text="{singleSolutionModel>CreatedBy}"/>
                    <Text text="{singleSolutionModel>Text}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>