<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="fiorilibappname.controller.Role">
    <Table items="{singleSolutionModel>/Role}" visible="{= !${viewSettings>/isEditMode}? true : false}">
        <headerToolbar>
            <Toolbar>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Role ID"/>
            </Column>
            <Column>
                <Text text="Tech Name"/>
            </Column>
            <Column>
                <Text text="Access Level"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{singleSolutionModel>RoleId}"/>
                    <Text text="{singleSolutionModel>TechName}"/>
                    <Text text="{singleSolutionModel>AccessLevel}"/>
                    <Text text="{singleSolutionModel>Description}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>


    <Table id="rolesTable" items="{roleModelEdit>/to_S_Role}" mode="MultiSelect" visible="{= ${viewSettings>/isEditMode}? true : false}">
        <headerToolbar>
            <Toolbar>
                <Title text="Role(s)"/>
                <ToolbarSpacer />
                <Button text="Add" icon="sap-icon://add" press="onAddRole" visible="{= ${viewSettings>/isEditMode}? true : false}"/>
                <Button text="Delete" icon="sap-icon://delete" press="onDeleteRole" visible="{= ${viewSettings>/isEditMode}? true : false}"/>
                <Button text="Select Role" icon="sap-icon://value-help" press="openRolesDialog" visible="{= ${viewSettings>/isEditMode}? true : false}"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Role ID"/>
            </Column>
            <Column>
                <Text text="Technical Name"/>
            </Column>
            <Column>
                <Text text="Access Level"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input value="{roleModelEdit>RoleId}" editable="false"/>
                    <Input value="{roleModelEdit>AccessLevel}"/>
                    <Input value="{roleModelEdit>AccessLevel}"/>
                    <Input value="{roleModelEdit>Description}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
