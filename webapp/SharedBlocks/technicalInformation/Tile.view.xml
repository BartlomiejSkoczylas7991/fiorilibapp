<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Table items="{singleSolutionModel>/Tile}" visible="{= !${viewGlobal>/isEditMode}? true : false}">
        <headerToolbar>
            <Toolbar>
                <Title text="Tile(s)"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Tile ID"/>
            </Column>
            <Column>
                <Text text="Title"/>
            </Column>
            <Column>
                <Text text="Subtitle"/>
            </Column>
            <Column>
                <Text text="Information"/>
            </Column>
            <Column>
                <Text text="Tile Type"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
            <Column>
                <Text text="Parameter Value"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{singleSolutionModel>TileId}"/>
                    <Text text="{singleSolutionModel>Title}"/>
                    <Text text="{singleSolutionModel>Subtitle}"/>
                    <Text text="{singleSolutionModel>Information}"/>
                    <Text text="{singleSolutionModel>TileType}"/>
                    <Text text="{singleSolutionModel>Description}"/>
                    <Text text="{singleSolutionModel>ParamValue}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>