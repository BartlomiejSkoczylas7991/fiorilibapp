<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm 
            layout="ResponsiveGridLayout" 
            editable="{= ${viewModel>/isEditMode}? true : false}" 
            title="Edit Service" 
            visible="{= ${viewModel>/isEditMode}? true : false}"
            columnsM="2"
			columnsL="3"
            columnsXL="4"> 
            <f:content> 
                <Label text="Name"/> 
                <Input value="{viewDetail>/Name}"/> 
                <Label text="URL"/> 
                <Input value="{viewDetail>/Url}"/> 
                <Label text="Description"/> 
                <TextArea value="{viewDetail>/Description}" rows="4"/> 
                <Label text="Software Component Version"/> 
                <Input value="{viewDetail>/SoftwareComponentVersion}"/> 
                <Label text="Back End Authorization"/> 
                <Input value="{viewDetail>/BackEndAuthorization}"/> 
                <Label text="Version"/> 
                <Input value="{viewDetail>/Version}"/> 
            </f:content> 
        </f:SimpleForm>
    </VBox>
    <Table items="{viewModel>/to_Service}" visible="{= !${viewModel>/isEditMode}? true : false}">
        <headerToolbar>
            <Toolbar>
                <Title text="Odata Service(s)"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Service ID"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
            <Column>
                <Text text="Version"/>
            </Column>
            <Column>
                <Text text="Url"/>
            </Column>
            <Column>
                <Text text="ExtServName"/>
            </Column>
            <Column>
                <Text text="SoftCompVersion"/>
            </Column>
            <Column>
                <Text text="BeAuthRole"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{viewModel>ServiceId}"/>
                    <Text text="{viewModel>Description}"/>
                    <Text text="{viewModel>Version}"/>
                    <Link text="{viewModel>Url}" href="{viewModel>Url}" target="_blank"/>
                    <Text text="{viewModel>ExtServName}"/>
                    <Text text="{viewModel>SoftCompVersion}"/>
                    <Text text="{viewModel>BeAuthRole}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <Table items="{viewDetail>/to_Service}" visible="{= ${viewModel>/isEditMode}? true : false}" mode="MultiSelect">
        <headerToolbar>
            <Toolbar>
                <Title text="Odata Service(s)"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Service ID"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
            <Column>
                <Text text="Version"/>
            </Column>
            <Column>
                <Text text="Url"/>
            </Column>
            <Column>
                <Text text="ExtServName"/>
            </Column>
            <Column>
                <Text text="SoftCompVersion"/>
            </Column>
            <Column>
                <Text text="BeAuthRole"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{viewDetail>ServiceId}"/>
                    <Text text="{viewDetail>Description}"/>
                    <Text text="{viewDetail>Version}"/>
                    <Link text="{viewDetail>Url}" href="{viewDetail>Url}" target="_blank"/>
                    <Text text="{viewDetail>ExtServName}"/>
                    <Text text="{viewDetail>SoftCompVersion}"/>
                    <Text text="{viewDetail>BeAuthRole}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    
</mvc:View>