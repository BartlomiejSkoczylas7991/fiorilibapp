<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm 
            layout="ResponsiveGridLayout" 
            editable="{= ${viewGlobal>/isEditMode}? true : false}" 
            title="Edit Service" 
            visible="{= ${viewGlobal>/isEditMode}? true : false}"
            columnsM="2"
			columnsL="3"
            columnsXL="4"> 
            <f:content> 
                <Label text="Name"/> 
                <Input value="{detailView>/Name}"/> 
                <Label text="URL"/> 
                <Input value="{detailView>/Url}"/> 
                <Label text="Description"/> 
                <TextArea value="{detailView>/Description}" rows="4"/> 
                <Label text="Software Component Version"/> 
                <Input value="{detailView>/SoftwareComponentVersion}"/> 
                <Label text="Back End Authorization"/> 
                <Input value="{detailView>/BackEndAuthorization}"/> 
                <Label text="Version"/> 
                <Input value="{detailView>/Version}"/> 
            </f:content> 
        </f:SimpleForm>
    </VBox>
    <Table items="{singleSolutionModel>/to_Service}" visible="{= !${viewGlobal>/isEditMode}? true : false}">
        <headerToolbar>
            <Toolbar>
                <Title text="Odata Service(s)"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Service ID"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
            <Column>
                <Text text="Version"/>
            </Column>
            <Column>
                <Text text="Url"/>
            </Column>
            <Column>
                <Text text="ExtServName"/>
            </Column>
            <Column>
                <Text text="SoftCompVersion"/>
            </Column>
            <Column>
                <Text text="BeAuthRole"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{singleSolutionModel>ServiceId}"/>
                    <Text text="{singleSolutionModel>Description}"/>
                    <Text text="{singleSolutionModel>Version}"/>
                    <Link text="{singleSolutionModel>Url}" href="{singleSolutionModel>Url}" target="_blank"/>
                    <Text text="{singleSolutionModel>ExtServName}"/>
                    <Text text="{singleSolutionModel>SoftCompVersion}"/>
                    <Text text="{singleSolutionModel>BeAuthRole}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <Table items="{detailView>/to_Service}" visible="{= ${viewGlobal>/isEditMode}? true : false}" mode="MultiSelect">
        <headerToolbar>
            <Toolbar>
                <Title text="Odata Service(s)"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Service ID"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
            <Column>
                <Text text="Version"/>
            </Column>
            <Column>
                <Text text="Url"/>
            </Column>
            <Column>
                <Text text="ExtServName"/>
            </Column>
            <Column>
                <Text text="SoftCompVersion"/>
            </Column>
            <Column>
                <Text text="BeAuthRole"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{detailView>ServiceId}"/>
                    <Text text="{detailView>Description}"/>
                    <Text text="{detailView>Version}"/>
                    <Link text="i18n>linkService" href="{detailView>Url}" target="_blank"/>
                    <Text text="{detailView>ExtServName}"/>
                    <Text text="{detailView>SoftCompVersion}"/>
                    <Text text="{detailView>BeAuthRole}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>