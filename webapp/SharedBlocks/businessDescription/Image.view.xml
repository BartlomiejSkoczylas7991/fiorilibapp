<mvc:View
	controllerName="fiorilibappname.controller.Image"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:unified="sap.ui.unified"
	xmlns:upload="sap.m.upload"
	height="50%">
		<Carousel 
			class="sapUiContentPadding" 
			loop="true"
    	    pages="{to_Image}"
			visible="{= !${viewSettings>/isEditMode}? true : false}">
			<pages>
				<Image src="{path: 'Attachment', formatter: '.formatImageSrc'}" class="carouselImage" press="onImagePress"/>
    	    	<!--<Image src="{Attachment}" class="carouselImage" press="onImagePress"/> -->
			</pages>
    	</Carousel>
		<Dialog 
			id="fullScreenCarouselDialog" 
			class="sapUiContentPadding" 
			resizable="true" 
			draggable="true"
			visible="{= !${viewSettings>/isEditMode}? true : false}">
			<Button icon="sap-icon://decline" press=".onCloseDialog" type="Transparent" class="sapUiDialogCloseButton"/>
			<Carousel id="fullScreenCarousel" pages="{to_Image}">
				<pages>
			      <Image src="{path: 'Attachment', formatter: '.formatImageSrc'}"/>
				</pages>
			</Carousel>
		</Dialog>
		<upload:UploadSet
				visible="{= ${viewSettings>/isEditMode}? true : false}"
				id="uploadSet"
				instantUpload="false"
				uploadEnabled="true"
				fileTypes="JPG,JPEG,jpeg,jpg,PNG,png"
				maxFileNameLength="50"
				maxFileSize="200"
				mediaTypes="text/plain,application/msword,image/jpeg"
				uploadUrl="../../../../upload"
				uploadButtonInvisible="false"
				sameFilenameAllowed="true"
				items="{path: 'detailView>/to_Image'}">
			<upload:items>
				<upload:UploadSetItem
						fileName="{detailView>fileName}"
						mediaType="{detailView>mimeType}"
						url="{detailView>url}"
						uploadState="{detailView>url}">
				</upload:UploadSetItem>
			</upload:items>
		</upload:UploadSet>
		<List id="progressList"/>
</mvc:View>

